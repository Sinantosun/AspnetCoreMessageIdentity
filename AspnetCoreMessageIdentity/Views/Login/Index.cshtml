@using AspnetCoreMessageIdentity.Models.Identity;
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Identity Giriş Ekranı</title>

    <link href="~/Template/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Template/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Template/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/Template/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center mt-5 loginscreen animated fadeInDown">
        <div>
            <h3>Identity mesaj uygulamasına<br /> Hoş Geldiniz</h3><br />
            <p>
                Mesaj göndermek/görüntülemek için lütfen aktif hesabınızla giriş yapın
            </p>
            <form class="m-t" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı adı" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" asp-for="Pwd" placeholder="Şifre" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Giriş Yap</button>

                <a href="#"><small>Şifrenizi mi unuttunuz ?</small></a>
                <p class="text-muted text-center"><small>Hesabınız yok mu ?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="register.html">Hesap Oluşturun</a>
            </form>
            <br />
            <div class="text-danger" style="display:flex; justify-content:center; align-items:center">@Html.ValidationSummary()</div>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/Template/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/Template/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/Template/inspinia-gh-pages/js/bootstrap.js"></script>

</body>

</html>
