
@{
    ViewData["Title"] = "ForwardMail";
    Layout = "~/Views/DefaultLayout/Index.cshtml";
}

@using AspnetCoreMessageIdentity.Models.MessageModels;
@model ForwadMailViewModel
@{
    ViewData["Title"] = "Composemail";
    Layout = "~/Views/DefaultLayout/Index.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        @await Component.InvokeAsync("_MailboxSideComponentPartial")
        <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <h2>
                    Mesajı ilet
                </h2>
            </div>
            <div class="mail-box">
                <div class="mail-body">
                    <small>* işaretli alanları eksiksiz doldurunz.</small>
                    <br />
                    <br />
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="MailsId" class="form-control">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">İletilecek email adres: *</label>
                            <div class="col-sm-10"><input type="text" asp-for="Email" class="form-control"></div>
                        </div>
                        <div class="mail-text h-200">
                            <label class="col-sm-2 col-form-label">İleteceğiniz mail içeriği </label>
                           
                            <div class="col-sm-10">@Html.Raw(Model.Content)</div>
                        </div>

                        <div class="mail-body text-right tooltip-demo">
                            <button asp-action="ForwardMail" asp-controller="Mailbox" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Gönder"><i class="fa fa-reply"></i> Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



