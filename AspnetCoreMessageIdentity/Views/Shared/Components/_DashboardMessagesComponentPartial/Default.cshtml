@using AspnetCoreMessageIdentity.DAL.Entities;
@model List<Mails>
<div class="col-lg-6">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Yeni Mesajlar</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        @if (Model.Count > 0)
        {
            <div class="ibox-content ibox-heading">
                <h3><i class="fa fa-envelope-o"></i> Son 5 Mesajınız</h3>
                <small><i class="fa fa-tim"></i> 22 Yeni mesajınız, taslak klasöründe 16 mesajınız var</small>
            </div>
            <div class="ibox-content">
                <div class="feed-activity-list">
                    @foreach (var item in Model)
                    {
                        <div class="feed-element">
                            <div>
                                <small class="float-right text-navy">1m ago</small>
                                <strong>@item.SenderNameSurname</strong>
                                <div>@item.Subject</div>
                                <small class="text-muted">@(((DateTime)item.Date).ToString("f"))</small>
                            </div>
                        </div>
                    }


                </div>
            </div>
        }
        else
        {
            <div class="ibox-content ibox-heading">
                <h3><i class="fa fa-envelope-o"></i> Yeni Mesajınız Yok.</h3>
            </div>
        }
       
    </div>
</div>