@using AspnetCoreMessageIdentity.DAL.Entities;
@model List<Mails>

@if (Model.Count > 0)
{
    <div class="col-lg-6">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Son 5 mesajınızın durumları</h5>
                    </div>
                    <div class="ibox-content table-responsive">
                        <table class="table table-hover no-margins">
                            <thead>
                                <tr>
                                    <th>Gönderdiğiniz Kişi</th>
                                    <th>Mesaj Başlığı</th>
                                    <th>Durum</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> <a href="/MailboxDetail/Index/@item.MailsId?ut=true"> <span style="text-transform:capitalize">@item.Receiver.NameSurname</span></a></td>
                                        <td> <a href="/MailboxDetail/Index/@item.MailsId?ut=true">@item.Subject</a></td>
                                        @if (item.IsReciverReadMessage == true)
                                        {
                                            <td class="text-navy "><i class="fa fa-check"></i><i class="fa fa-check"></i> @ViewBag.Time görüldü</td>
                                        }
                                        else
                                        {
                                            <td class="text-navy "><i class="fa fa-check"></i> İletildi</td>
                                        }

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

}
else
{
    <div class="col-lg-6">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Henüz mesaj göndermediniz.</h5>
                    </div>
                </div>
            </div>

        </div>
    </div>
}



