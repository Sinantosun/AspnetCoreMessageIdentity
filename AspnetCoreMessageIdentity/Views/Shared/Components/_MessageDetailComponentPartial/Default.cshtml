@using AspnetCoreMessageIdentity.DAL.Entities;
@model Mails
<div class="col-lg-9 animated fadeInRight" id="mail-body">
    <div class="mail-box-header">
        <h2>
            Mesaj Detayı
        </h2>
        <div class="mail-tools tooltip-demo m-t-md">
            <h3>
                <span class="font-normal">Konu: </span>@Model.Subject
            </h3>
            <h5>
                <span class="float-right font-normal">10:15AM 02 FEB 2014</span>
                <span class="float-right font-normal">@Model.Date.ToString("hh:mm") @Model.Date.ToString("dd/MM/YYYY")</span>
                <span class="font-normal">Kimden: </span>@Model.Sender.Email
            </h5>
        </div>
    </div>
    <div class="mail-box">


        <div class="mail-body">
            @Html.Raw(Model.Content)
        </div>
        @if (Model.Attachment != null)
        {
            <div class="mail-attachment">
                <p>
                    <span><i class="fa fa-paperclip"></i> 2 attachments - </span>
                </p>

                <div class="attachment">
                    <div class="file-box">
                        <div class="file">
                            <a href="#">
                                <span class="corner"></span>

                                <div class="icon">
                                    <i class="fa fa-file"></i>
                                </div>
                                <div class="file-name">
                                    @Model.Attachment
                                    <br />
                                    <small>Added: Jan 11, 2014</small>
                                </div>
                            </a>
                        </div>

                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        }
        @if (TempData["ShowButtons"] == null)
        {
            <div class="mail-body text-right tooltip-demo">
                <a class="btn btn-sm btn-white" href="/Mailbox/ReplayMail/@Model.MailsId"><i class="fa fa-reply"></i> Yanıtla</a>
                <a class="btn btn-sm btn-white" href="mail_compose.html"><i class="fa fa-arrow-right"></i> İlet</a>
                <button title="" data-placement="top" onclick="printPage('mail-body')" data-toggle="tooltip" type="button" data-original-title="Print" class="btn btn-sm btn-white"><i class="fa fa-print"></i> Yazdır</button>
                <button title="" data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white"><i class="fa fa-trash-o"></i> Çöp Kutusuna taşı</button>
            </div>
        }
       
        <div class="clearfix"></div>


    </div>
</div>